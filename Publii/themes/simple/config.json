		"assetsPath": "assets",
		"partialsPath": "partials",
		"responsiveImages": {
			"contentImages": {
				"sizes": "(max-width: 48em) 100vw, 768px",
				"dimensions": {
					"xs": {
						"width": 300,
						"height": 255,
						"crop": true
					},
					"sm": {
						"width": 480,
						"height": "auto"
					},
					"md": {
						"width": 768,
						"height": "auto"
					}
				}
			},

			"featuredImages": {				
				"sizes": {
					"post": "(max-width: 1600px) 100vw, 1600px",
					"amp": "(max-width: 768px) 100vw, 768px"				
				},
				
				"dimensions": {
					"xs": {
						"width": 300,
						"height": 255,
						"crop": true,
						"group": "post,amp"
					},
					"sm": {
						"width": 480,
						"height": "auto",
						"group": "post,amp"
					},
					"md": {
						"width": 768,
						"height": "auto",
						"group": "post,amp"
					},
					"lg": {
						"width": 1024,
						"height": "auto",
						"group": "post"
					},
					"xl": {
						"width": 1360,
						"height": "auto",
						"group": "post"
					},
					"2xl": {
						"width": 1600,
						"height": "auto",
						"group": "post"
					}
				}
			},

			"optionImages": {
				"sizes": "(max-width: 1600px) 100vw, 1600px",
				"dimensions": {
					"xs": {
						"width": 300,
						"height": 255,
						"crop": true
					},
					"sm": {
						"width": 480,
						"height": "auto"
					},
					"md": {
						"width": 768,
						"height": "auto"
					},
					"lg": {
						"width": 1024,
						"height": "auto"
					},
					"xl": {
						"width": 1360,
						"height": "auto"
					},
					"2xl": {
						"width": 1600,
						"height": "auto"
					}
				}
			}

		}
	},
	 "customElements": [
        {
            "label": "Info",
            "cssClasses": "msg msg--info",
            "selector": "p"
        },
        {
            "label": "Highlight",
            "cssClasses": "msg msg--highlight ",
            "selector": "p"
        },
        {
            "label": "Success",
            "cssClasses": "msg msg--success",
            "selector": "p"
        },
        {
            "label": "Drop cap",
            "cssClasses": "dropcap",
            "selector": "p"
        }
    ]
}
