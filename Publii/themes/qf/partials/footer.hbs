<footer class="footer">
    {{#if @config.custom.newsletter}}
        <div class="footer__newsletter newsletter">
            {{#checkIf @config.custom.newsletterForm '==' "mailchimp" }}
                <form class="newsletter__form" action="https:{{@config.custom.newsletterFormMailchimp}}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">
					<input type="email" value="" placeholder="e-mail address" name="EMAIL" required>
					<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
					<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" tabindex="-1" value=""></div>
					<div><input type="submit" value="{{ translate 'newsletter.subscribe' }}" name="subscribe" class="btn--inverse"></div>
				</form>
                <p class="newsletter__note">{{ translate 'newsletter.description' }}</p>
           
        {{else}}
            {{{@config.custom.newsletterFormCustom}}}
	        <p class="newsletter__note">{{ translate 'newsletter.description' }}</p>
        {{/checkIf}}
		</div>
    {{/if}}

    {{#if @config.custom.footerLogo}}
        <a class="logo" href="{{@website.url}}">
            {{#if @website.logo}}
                <img src="{{@website.logo}}" alt="{{@website.name}}">
            {{else}}
                {{@website.name}}
            {{/if}}
        </a>
    {{/if}}

    {{#if @config.custom.footerMenu}}
        {{> menu-footer menus.footerMenu}}
    {{/if}}

    {{#if @config.custom.socialButtons}}
        <div class="footer__social">
            {{#if @config.custom.socialFacebook}}
                <a href="{{@config.custom.socialFacebook}}" class="facebook" title="Facebook">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#facebook"/>
                    </svg>
                </a>
            {{/if}}
            {{#if @config.custom.socialTwitter}}
                <a href="{{@config.custom.socialTwitter}}" class="twitter" title="Twitter">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#twitter"/>
                    </svg>
                </a>
            {{/if}}
            {{#if @config.custom.socialGoogleplus}}
                <a href="{{@config.custom.social_googleplus}}" class="gplus" title="Google +">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#gplus"/>
                    </svg>
                </a>
            {{/if}}
            {{#if @config.custom.socialInstagram}}
                <a
                    href="{{@config.custom.socialInstagram}}"
                    class="instagram"
                    title="Instagram">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#instagram"/>
                    </svg>
                </a>
            {{/if}}
            {{#if @config.custom.socialLinkedin}}
                <a href="{{@config.custom.socialLinkedin}}" class="linkedin" title="LinkedIn">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#linkedin"/>
                    </svg>
                </a>
            {{/if}}
            {{#if @config.custom.socialVimeo}}
                <a href="{{@config.custom.socialVimeo}}" class="vimeo" title="Vimeo">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#vimeo"/>
                    </svg>
                </a>
            {{/if}}
            {{#if @config.custom.socialPinterest}}
                <a
                    href="{{@config.custom.socialPinterest}}"
                    class="pinterest"
                    title="Pinterest">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#pinterest"/>
                    </svg>
                </a>
            {{/if}}
            {{#if @config.custom.socialYoutube}}
                <a href="{{@config.custom.socialYoutube}}" class="youtube" title="Youtube">
                    <svg class="icon">
                        <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#youtube"/>
                    </svg>
                </a>
            {{/if}}
        </div>
    {{/if}}
    {{#if @config.custom.copyrightText}}
        <div class="footer__copyright">
            {{{@config.custom.copyrightText}}}
        </div>
    {{/if}}
</footer>
</div>
{{#if @config.custom.bannerCookie}}
{{> cookiebar}}
{{/if}}

<script>
	var loadCSSFiles = function() {
		var links = ['https://fonts.googleapis.com/css?family=Arimo:400,700|Playfair+Display:400,900&amp;subset=latin-ext'],
			headElement = document.getElementsByTagName('head')[0],
			linkElement, i;
		for (i = 0; i < links.length; i++) {
			linkElement = document.createElement('link');
			linkElement.rel = 'stylesheet';
			linkElement.href = links[i];
			headElement.appendChild(linkElement);
		}
	};
	var raf = requestAnimationFrame || mozRequestAnimationFrame || webkitRequestAnimationFrame || msRequestAnimationFrame;
	if (raf) {
		raf(loadCSSFiles);
	} else {
		window.addEventListener('load', loadCSSFiles);
	}

</script>
<script defer src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g=" crossorigin="anonymous"></script>
<script defer src="{{js "scripts.min.js"}}"></script>
