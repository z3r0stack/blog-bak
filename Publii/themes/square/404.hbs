{{> head}}
<div class="container">
    {{> menu menus.mainMenu}}
    <div class="content js-content">
        <header>
            <div class="top">
                <a class="logo" href="{{@website.url}}">
                    {{#if @website.logo}}
                        <img src="{{@website.logo}}" alt="{{@website.name}}">
                    {{else}}
                        {{@website.name}}
                    {{/if}}
                </a>
            </div>
            <div class="top top--right is-sticky">
                <button class="menu-toggle js-menu-toggle">{{ translate 'shared.menu' }}</button>
            </div>
        </header>
        <main class="main">
            <section class="main__left">
                {{#if @config.custom.uploadHero}}
                    <div class="hero">
                        <img
                            src="{{@config.custom.uploadHero}}"
                            {{responsiveSrcSet @config.custom.uploadHero}}
                            {{responsiveSizes}}
                            alt="{{@config.custom.uploadHeroAlt}}"
                            {{#if @config.custom.uploadHeroTitle}}
                            title="{{@config.custom.uploadHeroTitle}}"
                            {{/if}}>
                    </div>
                {{/if}}
                <header>
                    <h1>{{ translate 'error.404' }}</h1>
                    <p>{{ translate 'error.pageNotFound' }}</p>
                </header>
            </section>
            <div class="main__right">
                <div>
                    <h2>{{ translate 'error.message1' }}</h2>
                    <p>{{ translate 'error.message2' }}</p>
                </div>
            </div>
        </main>
        {{> footer}}
