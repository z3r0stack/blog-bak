{{> head}}
<body>
	{{{@bodyCustomCode}}}
    <div class="container">
        <header class="js-top">
            <a class="logo" href="{{@website.url}}">
                {{#if @website.logo}}
                    <img src="{{@website.logo}}" alt="{{@website.name}}">
                {{else}}
                    {{@website.name}}
                {{/if}}
            </a>
            {{> menu menus.mainMenu}}
        </header>
        <main>
            <section class="hero">
                <header>
                    {{#author}}
                        {{#if avatar}}
                            <img src="{{avatar}}" class="author__thumb" alt="{{name}}">
                        {{/if}}
                        <p>
                            {{postsNumber}}
                            post(s)
                        </p>
                        <h1>{{name}}</h1>
                        {{#if description}}
                            <p>
                                {{description}}
                            </p>
                        {{/if}}
                    {{/author}}
                </header>
            </section>
            <div class="category {{@config.custom.layoutAuthor}}">
                {{#each posts}}
                    <article>
                        {{#featuredImage}}
                            {{#if url}}
                                <div class="card__image">
                                    {{#if @config.custom.lazyLoad}}
                                        <a href="{{../url}}"><img
                                            class="lazyload blur-up"
                                            src="{{urlXs}}"
                                            srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                            data-srcset="{{srcset}}"
                                            data-sizes="auto"
                                            alt="{{alt}}"></a>
                                    {{else}}
                                        <a href="{{../url}}"><img src="{{url}}" sizes="{{sizes}}" srcset="{{srcset}}" alt="{{alt}}"></a>
                                    {{/if}}
                                </div>
                            {{/if}}
                        {{/featuredImage}}
                        <header class="card__header">
                            <p>
                                <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                                    {{date createdAt @config.custom.formatDate}}
                                </time>
                            </p>
                            <h2>
                                <a href="{{url}}" class="inverse">
                                    {{title}}
                                </a>
                            </h2>
                        </header>
                        {{#if excerpt}}
                            <p>{{{excerpt}}}</p>
                        {{/if}}
                    </article>
                {{/each}}
            </div>
            {{> pagination}}
        </main>
        {{> footer}}
