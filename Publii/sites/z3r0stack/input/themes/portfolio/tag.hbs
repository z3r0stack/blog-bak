{{> head}}
<body>
	{{{@bodyCustomCode}}}
    <div class="container">
        <header class="js-top">
            <a class="logo" href="{{@website.url}}">
                {{#if @website.logo}}
                    <img src="{{@website.logo}}" alt="{{@website.name}}">
                {{else}}
                    {{@website.name}}
                {{/if}}
            </a>
            {{> menu menus.mainMenu}}
        </header>
        <main>
            <section class="hero hero--normal">
                {{#tag}}
                    <header>
                        <h1 class="hero__title">
							{{name}}                           
                        </h1>
                        {{#if description}}
                           <p class="hero__desc">
								{{description}}
                            </p>
                        {{/if}}
                    </header>
                {{/tag}}
            </section>
            <div class="category {{@config.custom.layoutTags}}">
                {{#each posts}}
                    <article>
                        {{#featuredImage}}
                            {{#if @config.custom.lazyLoad}}
                                <figure class="category__image">
                                    <a href="{{../url}}">
                                        <img
                                            class="lazyload blur-up"
                                            src="{{urlXs}}"
                                            srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                            data-srcset="{{srcset.post}}"
                                            data-sizes="auto"
                                            data-expand="50"
                                            alt="{{alt}}">
                                    </a>
                                </figure>
                            {{else}}
                                <figure class="category__image">
                                    <a href="{{../url}}">
                                        <img
                                            src="{{url}}"
                                            sizes="{{sizes.post}}"
                                            srcset="{{srcset.post}}"
                                            alt="{{alt}}">
									</a>
                                </figure>
                            {{/if}}
                        {{/featuredImage}}
                        <header class="category__header">
                            <p>
                                <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                                    {{date createdAt @config.custom.formatDate}}
                                </time>
                            </p>
                            <h2>
                                <a href="{{url}}">{{title}}</a>
                            </h2>
                        </header>
                        {{#if excerpt}}
                            <p class="category__entry">
                                {{{excerpt}}}
                            </p>
                        {{/if}}
                        <a href="{{url}}" class="category__btn">{{ translate 'common.readmore' }}</a>
                    </article>
                {{/each}}
            </div>
            {{> pagination}}
        </main>
        {{> footer}}